<div class="col-lg-8 col-lg-offset-2">

 <h1 class="checkout_total">Your Total is: <%= number_to_currency(@cart.total_price) %> </h1>
 
<form action="/charges" method="POST" id="payment-form">
<span class="payment-errors"></span>
 

<div class="col-lg-6">
<div class="form-row">
<label>
<span>Name</span> </br>
<input type="text" size="20"  name="name">
</label>
</div>


<div class="form-row">
<label>
<span>Email</span> </br>
<input type="text" size="20" name="email"/>
</label>
</div>


<div class="form-row">
<label>
<span>Address</span> </br>
<input type="text" size="20"  name="address"/>
</label>
</div>


<div class="form-row">
<label>
<span>City</span> </br>
<input type="text" size="20"  name="city"/>
</label>
</div>


<div class="form-row">
<label>
<span>State</span> </br>
<input type="text" size="20"  name="state"/>
</label>
</div>

<div class="form-row">
<label>
<span>Zip</span> </br>
<input type="text" size="20"  name="zip"/>
</label>
</div>

</div> <!-- col-->






<div class="col-lg-6">

<div class="form-row">
<label>
<span>Card Number</span></br>
<input type="text" size="20" data-stripe="number"/>
</label>
</div>
 
<div class="form-row">
<label>
<span>CVC</span></br>
<input type="text" size="4" data-stripe="cvc"/>
</label>
</div>
 
<div class="form-row">
<label>
<span>Expiration (MM/YYYY)</span></br>
</label> </br>
<input type="text" size="2" data-stripe="exp-month"/>

<span> / </span>
<input type="text" size="4" data-stripe="exp-year"/>
</div>
 </br>
<button type="submit">Submit Payment</button>

	<input type="hidden" name="total" value="<%=@cart.total_price%>">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
</form>

</div>

</div>


<script type="text/javascript" charset="utf-8">
    Stripe.setPublishableKey('<%= Rails.configuration.stripe[:publishable_key] %>');
</script>
